<div class="col-md-8 col-md-offset-2">

<%= simple_form_for @store, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="form-group col-md-12">
    <label class="col-md-3 control-label">Nome </label>
    <div class="col-md-9">
      <%= f.input :name, label:false, wrapper:false %><br />
    </div>
    
    <label class="col-md-3 control-label">CNPJ </label>
    <div class="col-md-9">
      <%= f.input :cnpj, label:false, wrapper:false %><br />
    </div>

    <label class="col-md-3 control-label">Descrição </label>
    <div class="col-md-9">
    <%= f.input :description, label:false, wrapper:false %><br />
    </div>

    <label class="col-md-3 control-label">Banner </label>
    <div class="col-md-9">
      <%= f.input :banner, label:false, wrapper:false %><br />
    </div>
    
    <label class="col-md-3 control-label">Logo </label>
      <div class="col-md-9">
        <%= f.input :logo, label:false, wrapper:false %><br />
    </div>

    <label class="col-md-3 control-label">Cor Principal </label>
      <div class="col-md-9">
        <%= f.input :primary_color, label:false, wrapper:false %><br />
    </div>
    
    <label class="col-md-3 control-label">Cor Secundária </label>
      <div class="col-md-9">
        <%= f.input :secondary_color, label:false, wrapper:false %><br />
    </div>
    
    
    <label class="col-md-3 control-label">Localização </label>
    <div class="col-md-9">
      <%= f.input :location, label:false, wrapper:false %><br />
    </div>
  <div class="form-actions col-md-9 col-md-offset-3">
    <%= link_to "Voltar", stores_path, :class => 'btn btn-default' %>
    <%= f.button :submit,"Enviar" ,:class => 'btn-success' %>
  </div>

<% end %>

</div>