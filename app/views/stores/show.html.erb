<div class="container">

  <%- model_class = Store -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @store.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:cnpj) %>:</strong></dt>
    <dd><%= @store.cnpj %></dd>
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @store.description %></dd>
    <dt><strong><%= model_class.human_attribute_name(:banner) %>:</strong></dt>
    <dd><%= @store.banner %></dd>
    <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
    <dd><%= @store.location %></dd>
  </dl>

  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                stores_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_store_path(@store), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                store_path(@store),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>

</div>
